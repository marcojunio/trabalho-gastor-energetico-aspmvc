@model GestorEnergetico.ViewModel.ParametroViewModel
@{
    ViewData["Title"] = "Editar Parametro";
}

<h1>Editar Parametro</h1>

<h4>Dados da Parametro</h4>
<hr />
<div class="row">
    <form asp-action="Editar" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col">
                <label asp-for="FaixaConsumoAlto" class="control-label"></label>
                <input asp-for="FaixaConsumoAlto" type="number" class="form-control" />
                <span asp-validation-for="FaixaConsumoAlto" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="FaixaConsumoMedio" class="control-label"></label>
                <input asp-for="FaixaConsumoMedio" type="number" class="form-control" />
                <span asp-validation-for="FaixaConsumoMedio" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="ValorKwh" class="control-label"></label>
                <input asp-for="ValorKwh" type="number" class="form-control" />
                <span asp-validation-for="ValorKwh" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <a asp-action="Index">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}