@model IEnumerable<GestorEnergetico.Models.Dto.TotalConsumoEnergiaDto>

@{
    ViewData["Title"] = "Total de consumo";
}


<table class="table text-center">
    <thead>
        <tr>
            <th>
              Nome do Item
            </th>
            <th>
                Total kWh / Mês
            </th>
            <th>
               Valor em Reais
            </th>
            <th>
                Indicador de Consumo
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeItem)
                </td>
                <td>
                    @String.Format("{0:N2}",item.TotalWatts)
                </td>
                <td>
                    R$@String.Format("{0:N2}",item.ValorEmReais)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IndicadorDeConsumo)
                </td>
            </tr>
        }
    </tbody>
</table>