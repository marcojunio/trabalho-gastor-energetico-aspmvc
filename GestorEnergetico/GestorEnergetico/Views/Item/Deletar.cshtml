
@model GestorEnergetico.ViewModel.ItemViewModel

@{
    ViewData["Title"] = "Deletar";
}

<h3>Você tem certeza que deseja excluir?</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConsumoWatts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.ConsumoWatts)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataFabricacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.DataFabricacao)
        </dd>
        <dt class="col-sm-2">
            Categoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Categoria.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HorasUsoDiario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.HorasUsoDiario)
        </dd>
    </dl>
    <form asp-action="Deletar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>