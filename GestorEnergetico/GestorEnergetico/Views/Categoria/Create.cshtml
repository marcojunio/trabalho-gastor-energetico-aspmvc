@model Atividade.RequestModel.EventRequestModel
@{
    ViewData["Title"] = "New Event";
}

<h1>New Event</h1>

<h4>Event's data</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-6">
                    <label asp-for="Descrition" class="control-label"></label>
                    <input asp-for="Descrition" class="form-control" />
                    <span asp-validation-for="Descrition" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Observation" class="control-label"></label>
                    <input asp-for="Observation" class="form-control" />
                    <span asp-validation-for="Observation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DayStart" class="control-label"></label>
                <input asp-for="DayStart" type="date" class="form-control" />
                <span asp-validation-for="DayStart" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-6">
                    <label asp-for="IdClient" class="control-label"></label>
                    <select class="form-control" asp-for="IdClient">
                        <option>Select Client</option>
                        @foreach (var item in Model.Clients)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="IdClient" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="IdLocal" class="control-label"></label>
                    <select class="form-control" asp-for="IdLocal">
                        <option>Select Local</option>
                        @foreach (var item in Model.Locals)
                        {
                            <option value="@item.Id">@item.Address</option>
                        }
                    </select>
                    <span asp-validation-for="IdLocal" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="IdSituationEvent" class="control-label"></label>
                    <select class="form-control" asp-for="IdSituationEvent">
                        <option>Select Situation</option>
                        @foreach (var item in Model.SituationEvents)
                        {
                            <option value="@item.Id">@item.Descrition</option>
                        }
                    </select>
                    <span asp-validation-for="IdSituationEvent" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="IdTypeEvent" class="control-label"></label>
                    <select class="form-control" asp-for="IdTypeEvent">
                        <option>Select Type Event</option>
                        @foreach (var item in Model.TypeEvents)
                        {
                            <option value="@item.Id">@item.Descrition</option>
                        }
                    </select>
                    <span asp-validation-for="IdTypeEvent" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="All">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}