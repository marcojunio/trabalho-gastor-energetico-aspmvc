@model GestorEnergetico.ViewModel.CategoriaViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Detalhes da Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaPaiId)
        </dt>
        <dd class="col-sm-10">
            @if (Model.CategoriaPaiId != null)
            {
                @Html.DisplayFor(modelItem => modelItem.CategoriaPaiId)
            }
            else
            {
                <p>Não possui categoria pai</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>